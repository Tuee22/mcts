[flake8]
max-line-length = 88
extend-ignore = E203, W503
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    .mypy_cache,
    venv,
    .venv,
    backend/core/*.cpp,
    backend/core/*.h,
    backend/core/*.hpp,
    stubs/

# Custom error codes for our type checking
# TYP001: Use of 'Any' type
# TYP002: Use of 'cast' function  
# TYP003: Use of 'type: ignore' comment

# Enable our custom checks
enable-extensions = TYP

# Per-file ignores
per-file-ignores =
    # Allow imports in __init__.py files
    __init__.py:F401