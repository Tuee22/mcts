{
  "hooks": {
    "PostToolUse": {
      "command": "python3 .claude/hooks/on-change-chain.py",
      "triggers": ["Edit", "Write", "MultiEdit"],
      "description": "Automatically runs Black → MyPy → Build → Tests chain after code changes"
    }
  },
  "execution": {
    "dockerFirst": true,
    "workingDirectory": "/Users/matthewnowak/mcts",
    "containerExecution": {
      "required": true,
      "service": "mcts",
      "composeFile": "docker/docker-compose.yaml"
    }
  }
}