# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.{py,pyi}]
indent_style = space
indent_size = 4
max_line_length = 88

# JavaScript, TypeScript, JSON
[*.{js,jsx,ts,tsx,json,jsonc}]
indent_style = space
indent_size = 2

# HTML, CSS, SCSS
[*.{html,htm,css,scss,sass}]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Docker files
[{Dockerfile*,*.dockerfile}]
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

# C/C++ files
[*.{c,cpp,h,hpp}]
indent_style = space
indent_size = 4

# Configuration files
[*.{toml,ini,cfg,conf}]
indent_style = space
indent_size = 2

# Git files
[{.gitignore,.gitattributes,.gitkeep}]
indent_style = space
indent_size = 2

# Makefile (tabs required)
[{Makefile,*.mk}]
indent_style = tab
indent_size = 4

# Binary files - no text processing
[*.{png,jpg,jpeg,gif,ico,svg,woff,woff2,eot,ttf,zip,tar,gz,bz2,7z,pdf,exe,dll,so,dylib}]
charset = unset
insert_final_newline = unset
trim_trailing_whitespace = unset